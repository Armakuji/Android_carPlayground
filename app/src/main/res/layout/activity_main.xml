<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="carModel"
                type="buu.informatics.s59160575.carpark.CarModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/constain_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            tools:context=".MainActivity">

        <TextView
                android:id="@+id/box_one"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="#8BC34A"
                android:text="@string/box_one"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/box_text_size"
                app:layout_constraintEnd_toStartOf="@+id/box_two"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/box_two"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginStart="152dp"
                android:layout_marginTop="28dp"
                android:background="#8BC34A"
                android:text="@string/box_one"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/box_text_size"
                app:layout_constraintEnd_toStartOf="@+id/box_three"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/box_one"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/box_three"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginStart="276dp"
                android:layout_marginTop="28dp"
                android:background="#8BC34A"
                android:text="@string/box_one"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/box_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/box_two"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <EditText
                android:id="@+id/idcar_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:hint="@string/id_car_textEdit"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/model_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/box_one" />

        <EditText
                android:id="@+id/model_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:hint="@string/model_text_edit"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/name_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idcar_edit" />

        <EditText
                android:id="@+id/name_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/name_text_edit"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/update_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/model_edit" />

        <Button
                android:id="@+id/update_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="100dp"
                android:background="@android:color/holo_blue_dark"
                android:text="@string/update_button"
                app:layout_constraintEnd_toStartOf="@+id/delete_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_edit" />

        <Button
                android:id="@+id/delete_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="30dp"
                android:background="@color/colorAccent"
                android:text="@string/delete_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/update_button"
                app:layout_constraintTop_toBottomOf="@+id/name_edit" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
